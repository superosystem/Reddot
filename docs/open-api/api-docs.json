  "components": {
    "schemas": {
      "ErrorMessageString": {
        "required": [
          "code",
          "data",
          "status",
          "timestamp"
        ],
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "status": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "data": {
            "type": "string"
          }
        }
      },
      "VoteDTO": {
        "required": [
          "post_id",
          "vote_type"
        ],
        "type": "object",
        "properties": {
          "vote_type": {
            "type": "string",
            "enum": [
              "UPVOTE",
              "DOWNVOTE"
            ]
          },
          "post_id": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "SubredditDTO": {
        "required": [
          "description",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "postCount": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "PostRequest": {
        "required": [
          "description",
          "post_name",
          "subreddit_name",
          "url"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "subreddit_name": {
            "type": "string"
          },
          "post_name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "CommentDTO": {
        "required": [
          "post_id",
          "text",
          "username"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "post_id": {
            "type": "integer",
            "format": "int64"
          },
          "createdDate": {
            "type": "string",
            "format": "date-time"
          },
          "text": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "RegisterRequest": {
        "required": [
          "email",
          "name",
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
